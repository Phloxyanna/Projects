@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var currT = DateTime.Now.Millisecond;
    var DataDude = currT % 2 == 0 ? "No Customers at this time." : "Display all data as found.";
}

<div class="page-header">
    <h1 id="title">Customers</h1>
</div>

<h2>@DataDude @($"millisecondExtracted={currT}")</h2>
<table class="table table-hover">
<thead>
<tr>
    <th scope="col">Customer Name</th>
    <th scope="col">Customer Id</th>
</tr>
</thead>
<tbody>
<tr class="table-active">
    <th scope="row">Mike Foster</th>
    <td>1</td>
</tr>
<tr>
    <th scope="row">Cindy Foster</th>
    <td>2</td>
</tr>
</tbody>
</table>
